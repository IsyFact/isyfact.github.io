{
  "name": "isyfact-online-documentation",
  "version": "5.0.0-SNAPSHOT",
  "scripts": {
    "build": "antora antora-playbook.yml",
    "build:local": "antora antora-playbook-local.yml",
    "build:local-json": "antora --log-format=json antora-playbook-local.yml",

    "build:release": "antora --fetch antora-release-local.yml",
    "build:dev": "antora --fetch antora-dev-local.yml",

    "build:static": "powershell -NoProfile -ExecutionPolicy Bypass -File .\\scripts\\build-static.ps1",
    "build:static:current5x": "powershell -NoProfile -ExecutionPolicy Bypass -File .\\scripts\\build-static.ps1 -CurrentTarget 5.x",
    "build:static:current500": "powershell -NoProfile -ExecutionPolicy Bypass -File .\\scripts\\build-static.ps1 -CurrentTarget 5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/IsyFact/isyfact.github.io.git"
  },
  "license": "Apache-2.0",
  "homepage": "https://isyfact.github.io",
  "devDependencies": {
    "@antora/cli": "^3.1.14",
    "@antora/site-generator-default": "^3.1.14",
    "font-awesome": "^4.7.0",
    "@opendevise/antora-git-lfs-extension": "^1.0.9"
  },
  "overrides": {
    "js-yaml": "4.1.1"
  },
  "dependencies": {
    "antora": "^3.1.14",
    "@antora/lunr-extension": "^1.0.0-alpha.12"
  }
}
